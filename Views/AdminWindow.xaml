<Window x:Class="NfcTimeCard.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin" Height="700" Width="1050"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      CornerRadius="25"
                      GlassFrameThickness="0"
                      ResizeBorderThickness="7"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="25" x:Name="OuterBorder">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4f46e5" Offset="0"/>
                <GradientStop Color="#7c3aed" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0">
                <Button Content="&#xE921;" Style="{StaticResource CaptionButtonStyle}" Click="BtnMinimize_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
                <Button x:Name="BtnMaximize" Content="&#xE922;" Style="{StaticResource CaptionButtonStyle}" Click="BtnMaximize_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
                <Button Content="&#xE8BB;" Style="{StaticResource CloseButtonStyle}" Click="BtnClose_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="20,0,20,20">
                <Border Background="White" CornerRadius="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Background="#f8f9fa" CornerRadius="20,0,0,20" BorderThickness="0,0,1,0" BorderBrush="#edf2f7">
                            <StackPanel Margin="10,40">
                                <TextBlock Text="MANAGEMENT" FontSize="11" FontWeight="Black" Foreground="#cbd5e0" Margin="25,0,0,25"/>
                                
                                <Button Content="従業員管理" Style="{StaticResource MenuButtonStyle}" Click="Menu_Employee_Click"/>
                                <Button Content="打刻管理" Style="{StaticResource MenuButtonStyle}" Click="Menu_Attendance_Click"/>
                                <Button Content="システム設定" Style="{StaticResource MenuButtonStyle}" Click="Menu_System_Click"/>
                                
                                <Separator Background="#e2e8f0" Margin="20,20"/>
                                <Button Content="ログアウト" Style="{StaticResource MenuButtonStyle}" Foreground="#e53e3e" Click="Logout_Click"/>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Column="1" Margin="40">
                            <ContentControl x:Name="MainContentFrame" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>