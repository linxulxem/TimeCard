<Window x:Class="NfcTimeCard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NFC TimeCard System" Height="600" Width="600" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        Closed="Window_Closed">

    <Window.Resources>
        <Style x:Key="StampButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MainIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock x:Name="icon" Text="{TemplateBinding Content}" FontFamily="Segoe Fluent Icons" FontSize="22" Foreground="#cbd5e1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4f46e5" Offset="0"/>
                <GradientStop Color="#7c3aed" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="20">
            <Border Background="White" CornerRadius="25" Padding="40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button Content="&#xE713;" Width="40" Height="40" Click="BtnSettings_Click" Style="{StaticResource MainIconButtonStyle}"/>
                        <Button Content="&#xE8BB;" Width="40" Height="40" Click="BtnExit_Click" Style="{StaticResource MainIconButtonStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtDate" Text="----年--月--日 (--)" FontSize="22" Foreground="#64748b" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Viewbox Height="120" HorizontalAlignment="Center" Margin="0,0,0,60">
                            <TextBlock x:Name="CurrentTimeLabel" Text="00:00:00" FontWeight="Black" Foreground="#1e293b" FontFamily="Consolas"/>
                        </Viewbox>

                        <Grid Height="160" MaxWidth="500">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnIn" Content="出 勤" Background="#10b981" Style="{StaticResource StampButtonStyle}" Click="BtnIn_Click"/>
                            <Button x:Name="BtnOut" Grid.Column="2" Content="退 勤" Background="#ef4444" Style="{StaticResource StampButtonStyle}" Click="BtnOut_Click"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>