<Window x:Class="NfcTimeCard.Views.StampConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打刻確認" Height="720" Width="500"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="25" Background="White" BorderBrush="#e2e8f0" BorderThickness="1">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="内容を確認してください" FontSize="18" FontWeight="Bold" Foreground="#1e293b" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Border x:Name="WarningPanel" Grid.Row="1" Background="#fef2f2" BorderBrush="#fecaca" BorderThickness="1" CornerRadius="10" Padding="15,10" Margin="0,0,0,15" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE7BA;" FontFamily="Segoe Fluent Icons" Foreground="#dc2626" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtWarning" Text="エラー内容" Foreground="#991b1b" FontWeight="SemiBold" FontSize="14" TextWrapping="Wrap" MaxWidth="380"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" VerticalAlignment="Center">
                <Border Width="120" Height="160" CornerRadius="10" BorderBrush="#e2e8f0" BorderThickness="2" ClipToBounds="True" Margin="0,0,0,15">
                    <Image x:Name="ImgConfirmPhoto" Stretch="UniformToFill"/>
                </Border>
                <TextBlock x:Name="TxtConfirmName" Text="従業員名" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                    <TextBlock x:Name="TxtConfirmTime" Text="00:00:00" FontSize="36" FontWeight="Black" FontFamily="Consolas"/>
                    <Border x:Name="BadgeType" Padding="15,5" CornerRadius="8" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="TxtConfirmType" Text="出勤" FontWeight="Bold" FontSize="16"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="直近の打刻履歴" FontSize="13" FontWeight="Bold" Foreground="#64748b" Margin="5,0,0,5"/>
                <ItemsControl x:Name="ConfirmHistoryList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#f8fafc" CornerRadius="8" Padding="15,10" Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border x:Name="TypeBadge" Padding="8,2" CornerRadius="4" Margin="0,0,15,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StampType}" Value="IN"><Setter Property="Background" Value="#dcfce7"/></DataTrigger>
                                                    <DataTrigger Binding="{Binding StampType}" Value="OUT"><Setter Property="Background" Value="#fee2e2"/></DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="Bold" FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding StampType}" Value="IN"><Setter Property="Text" Value="出勤"/><Setter Property="Foreground" Value="#166534"/></DataTrigger>
                                                        <DataTrigger Binding="{Binding StampType}" Value="OUT"><Setter Property="Text" Value="退勤"/><Setter Property="Foreground" Value="#991b1b"/></DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <TextBlock Grid.Column="1" Text="{Binding ActualTime, StringFormat={}{0:MM/dd HH:mm:ss}}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#475569"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="キャンセル" Click="Cancel_Click" Background="Transparent" BorderThickness="0" Foreground="#94a3b8" Height="50" Cursor="Hand"/>
                <Button Grid.Column="1" Content="確定して記録" Click="Ok_Click" Background="#4f46e5" Foreground="White" BorderThickness="0" Height="50" FontSize="18" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border"> <Setter Property="CornerRadius" Value="10"/> </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>