<Window x:Class="NfcTimeCard.Views.AttendanceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打刻内容の修正" Height="500" Width="400" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,15">
            <TextBlock x:Name="TxtInfo" Text="日付: 2026-02-12 (社員名)" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="※ HH:mm 形式で入力してください（空欄で削除）" FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="EditStackPanel">
                </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="キャンセル" Width="80" Height="30" IsCancel="True" Margin="0,0,10,0"/>
            <Button Content="保存" Width="80" Height="30" Background="#4f46e5" Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>