<Window x:Class="NfcTimeCard.Views.FaceRecognitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顔認証" Height="650" Width="500" 
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent" Closed="Window_Closed">

    <Border CornerRadius="25" Background="White" BorderBrush="#e2e8f0" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="顔を認識させてください" FontSize="20" FontWeight="Bold" Foreground="#1e293b" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <Border Grid.Row="1" Width="360" Height="480" Background="#0f172a" CornerRadius="20" BorderBrush="#4f46e5" BorderThickness="2" ClipToBounds="True">
                <Grid>
                    <Image x:Name="ImgPreview" Stretch="UniformToFill"/>
                    <Ellipse Width="250" Height="320" Stroke="White" StrokeThickness="2" StrokeDashArray="4 2" Opacity="0.4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Border Background="#B3000000" VerticalAlignment="Bottom" Padding="12">
                        <TextBlock x:Name="TxtStatus" Text="照合中..." Foreground="White" HorizontalAlignment="Center" FontSize="14"/>
                    </Border>
                </Grid>
            </Border>

            <Button Grid.Row="2" Content="キャンセル" Click="Cancel_Click" Width="120" Height="45" Background="Transparent" Foreground="#94a3b8" BorderThickness="0" Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>